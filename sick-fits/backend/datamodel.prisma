enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission]
  cart: [CartItem!]!
}

type Item {
  id: ID! @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  user: User!
  # createdAt: DateTime!
  # updatedAt: DateTime!
  # user: User! # create relationship between item and user
}

type CartItem {
  id: ID! @unique
  quantity: Int! @default(value: 1)
  item: Item #relationship to Item
  user: User! #relationship to User
}
